@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center vh-100" >
    <div class="col-md-4 card shadow-lg p-4">
        <div class="card-header text-center mb-4">
            <h2>caseCRM™ Register</h2>
        </div>
        <form id="registerForm">
            <div class="form-group mb-3">
                <label for="username">Username</label>
                <input type="text" class="form-control form-control-lg rounded" id="username" name="username" required>
            </div>
            <div class="form-group mb-3">
                <label for="role">Role</label>
                <select class="form-control form-control-lg form-select-sm rounded" id="role" name="role" required>
                    <option value="user">User</option>
                    <option value="admin">Admin</option>
                    <option value="superadmin">Super Admin</option>
                </select>
            </div>
            <div class="form-group mb-4">
                <label for="password">Password</label>
                <input type="password" class="form-control form-control-lg rounded" id="password" name="password" required>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Save</button>
            </div>
            <div class="d-grid mt-3">
                <a href="/Auth/Login" class="btn btn-success btn-lg">Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $("#registerForm").submit(function (event) {
            event.preventDefault();
            $.ajax({
                type: "POST",
                url: "/Auth/Register",
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        alert("Registration successful!");
                        window.location.href = "/Auth/LogIn";
                    } else {
                        alert("Error: " + response.message);
                    }
                }
            });
        });
    </script>
}
